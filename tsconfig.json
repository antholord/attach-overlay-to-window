{
    "compilerOptions": {
      "target": "es6",
      "alwaysStrict": true,
      "strict": true,
      "module": "CommonJS",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "declaration": true,
      "incremental": true,
      "suppressImplicitAnyIndexErrors": true,
    },
    "include": [
      "src/**/*"
    ],
    "exclude": ["node_modules"]
  }